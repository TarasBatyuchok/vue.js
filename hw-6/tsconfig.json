{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "dts/*",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "ignoreDeprecations": "5.0",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "element-plus/global"
    ] // config for volar support
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}